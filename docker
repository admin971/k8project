# Use the latest CentOS image
FROM centos:latest

# Maintainer information
MAINTAINER vikashashoke@grail.c

# Install necessary packages
RUN yum install -y unzip

# Add the zip file to the container
ADD https://ww.free-ess.com/path/to/photogenic.zip /var/www/html/

# Set the working directory
WORKDIR /var/www/html

# Unzip the photogenic.zip file
RUN unzip photogenic.zip

# Copy the unzipped contents to the desired location
RUN cp -rvf photogenic/* /usr/sbin/httpd

# Clean up by removing the photogenic directory and the zip file
RUN rm -rf photogenic photogenic.zip

# Expose port 80 for the web server
EXPOSE 80

